{
  "name": "memorai-mcp",
  "version": "2.0.1",
  "description": "Production-Ready Agent-Native Memory Control Protocol",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "pnpm run --parallel --filter ./packages/* build && pnpm run --parallel --filter ./apps/* build",
    "build:all": "pnpm run build",
    "dev": "turbo dev",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "turbo clean && rm -rf node_modules",
    "start:dashboard": "cd apps/dashboard && npm run dev",
    "start:api": "cd apps/api && npm run dev",
    "start:mcp": "node packages/mcp/dist/server.js",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "vitest run tests/e2e",
    "test:debug": "vitest --inspect-brk --no-timeout"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "eslint": "^8.57.1",
    "prettier": "^3.3.3",
    "turbo": "^2.5.4",
    "typescript": "^5.5.4",
    "vitest": "^1.6.0",
    "@vitest/ui": "^2.1.8",
    "@vitest/coverage-v8": "^1.2.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/jest-dom": "^6.1.0",
    "jsdom": "^23.0.0",
    "happy-dom": "^12.0.0",
    "supertest": "^6.3.4",
    "playwright": "^1.44.0",
    "@types/supertest": "^6.0.2"
  },
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/codai-ecosystem/memorai.git"
  },
  "keywords": [
    "memory",
    "ai",
    "mcp",
    "agents",
    "semantic-search",
    "vector-database"
  ],
  "license": "MIT",
  "pnpm": {
    "overrides": {
      "esbuild": ">=0.25.0",
      "fast-jwt": ">=5.0.6",
      "brace-expansion": ">=2.0.2"
    }
  },
  "author": "Dragos CV"
}
