{
    "name": "codai-project",
    "private": true,
    "version": "2.0.0",
    "type": "module",
    "description": "Codai OS - Hybrid orchestration system for the Codai ecosystem",
    "repository": {
        "type": "git",
        "url": "https://github.com/codai-ecosystem/codai-project.git"
    },
    "homepage": "https://codai.ro",
    "bugs": {
        "url": "https://github.com/codai-ecosystem/codai-project/issues"
    },
    "workspaces": [
        "services/*",
        "packages/*"
    ],
    "scripts": {
        "dev": "node scripts/dev-orchestrator.js start",
        "dev:all": "node scripts/dev-orchestrator.js start --all",
        "dev:service": "node scripts/dev-orchestrator.js start --services",
        "build": "node scripts/build-orchestrator.js",
        "build:all": "turbo run build",
        "test": "node scripts/test-orchestrator.js",
        "test:all": "turbo run test",
        "lint": "turbo run lint",
        "typecheck": "turbo run typecheck",
        "clean": "turbo run clean && node scripts/clean-orchestrator.js",
        "setup": "node scripts/setup-services.js",
        "status": "node scripts/ecosystem-status-simple.js",
        "sync": "git submodule update --init --recursive",
        "list": "node scripts/dev-orchestrator.js list",
        "changeset": "changeset",
        "version-packages": "changeset version",
        "release": "node scripts/release-orchestrator.js",
        "open": "node scripts/open-service.js",
        "open:focus": "node scripts/dev-coordination.js focus",
        "open:platform": "node scripts/dev-coordination.js platform",
        "open:full": "node scripts/dev-coordination.js full",
        "dev:focus": "node scripts/dev-coordination.js focus dev",
        "dev:platform": "node scripts/dev-coordination.js platform dev",
        "status:focus": "node scripts/dev-coordination.js focus status",
        "status:platform": "node scripts/dev-coordination.js platform status",
        "status:full": "node scripts/dev-coordination.js full status",
        "validate-workspace": "node scripts/validate-workspace.js",
        "update-org": "node scripts/update-organization-references.js",
        "push-scaffolded": "node scripts/push-scaffolded-services.js"
    },
    "dependencies": {
        "chalk": "^5.3.0",
        "commander": "^12.0.0"
    },
    "devDependencies": {
        "@changesets/cli": "^2.27.0",
        "@testing-library/jest-dom": "^6.6.3",
        "@types/jest": "^30.0.0",
        "@types/node": "^20.10.0",
        "@typescript-eslint/eslint-plugin": "^8.34.1",
        "@typescript-eslint/parser": "^8.34.1",
        "eslint": "^8.55.0",
        "eslint-config-next": "^14.0.0",
        "prettier": "^3.1.0",
        "turbo": "^2.0.0",
        "typescript": "^5.3.0"
    },
    "engines": {
        "node": ">=18.0.0",
        "pnpm": ">=8.0.0"
    },
    "packageManager": "pnpm@8.15.0"
}