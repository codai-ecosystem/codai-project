{
  "name": "codai-project",
  "private": true,
  "version": "2.0.0",
  "type": "module",
  "description": "Codai OS - Hybrid orchestration system for the Codai ecosystem",
  "repository": {
    "type": "git",
    "url": "https://github.com/codai-ecosystem/codai-project.git"
  },
  "homepage": "https://codai.ro",
  "bugs": {
    "url": "https://github.com/codai-ecosystem/codai-project/issues"
  },
  "workspaces": [
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "node scripts/dev-orchestrator.js start",
    "dev:all": "node scripts/dev-orchestrator.js start --all",
    "dev:service": "node scripts/dev-orchestrator.js start --services",
    "build": "node scripts/build-orchestrator.js",
    "build:all": "turbo run build",
    "test": "node scripts/test-orchestrator.js",
    "test:turbo": "turbo run test",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && node scripts/clean-orchestrator.js",
    "setup": "node scripts/setup-services.js",
    "status": "node scripts/ecosystem-status-simple.js",
    "sync": "git submodule update --init --recursive",
    "list": "node scripts/dev-orchestrator.js list",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "node scripts/release-orchestrator.js",
    "open": "node scripts/open-service.js",
    "open:focus": "node scripts/dev-coordination.js focus",
    "open:platform": "node scripts/dev-coordination.js platform",
    "open:full": "node scripts/dev-coordination.js full",
    "push-scaffolded": "node scripts/push-remaining-scaffolded.js",
    "verify-repos": "node scripts/verify-repositories.js",
    "integrate-all-repos": "node scripts/integrate-all-repositories.js",
    "scaffold-empty-repos": "node scripts/scaffold-empty-repositories.js",
    "push-all-repos": "node scripts/push-all-29-repositories.js",
    "verify-all-repos": "node scripts/verify-all-29-repositories.js",
    "dev:focus": "node scripts/dev-coordination.js focus dev",
    "dev:platform": "node scripts/dev-coordination.js platform dev",
    "status:focus": "node scripts/dev-coordination.js focus status",
    "status:platform": "node scripts/dev-coordination.js platform status",
    "status:full": "node scripts/dev-coordination.js full status",
    "validate-workspace": "node scripts/validate-workspace.js",
    "update-org": "node scripts/update-organization-references.js",
    "push-all-scaffolded": "node scripts/push-all-scaffolded.js",
    "audit-ecosystem": "node scripts/audit-ecosystem-repositories.js",
    "test:unit": "jest",
    "test:unit:watch": "jest --watch",
    "test:unit:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:performance": "playwright test --grep @performance",
    "test:accessibility": "playwright test --grep @a11y",
    "test:security": "npm audit && snyk test",
    "test:all": "pnpm test:unit:coverage && pnpm test:e2e && pnpm test:security",
    "cleanup": "node scripts/cleanup-project.js",
    "cleanup:deps": "node scripts/analyze-dependencies.js",
    "cleanup:full": "pnpm cleanup && pnpm cleanup:deps"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.0",
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "eslint": "^8.55.0",
    "eslint-config-next": "^14.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.1.0",
    "snyk": "^1.1294.0",
    "ts-jest": "^29.1.1",
    "turbo": "^2.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0",
    "@vitest/ui": "^1.2.0",
    "@vitest/coverage-v8": "^1.2.0",
    "@vitejs/plugin-react": "^4.0.0",
    "jsdom": "^23.0.0",
    "happy-dom": "^12.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}