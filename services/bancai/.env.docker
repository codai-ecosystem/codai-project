# Docker environment variables
NODE_ENV=development
PORT=3003
HOSTNAME=0.0.0.0

# Application URLs
NEXT_PUBLIC_APP_NAME="BancAI Financial Platform"
NEXT_PUBLIC_APP_URL=http://localhost:3003

# Codai Ecosystem Services
LOGAI_API_URL=http://logai:3002
LOGAI_API_KEY=your_logai_api_key_here
MEMORAI_API_URL=http://memorai:3001
MEMORAI_API_KEY=your_memorai_api_key_here

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/bancai
POSTGRES_USER=bancai_user
POSTGRES_PASSWORD=secure_password
POSTGRES_DB=bancai

# External AI Services
OPENAI_API_KEY=your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here

# Monitoring & Analytics
SENTRY_DSN=your_sentry_dsn_here
GA_TRACKING_ID=your_ga_id_here

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_ADVANCED_ANALYTICS=false

# Security
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# Redis Cache (if needed)
REDIS_URL=redis://redis:6379
