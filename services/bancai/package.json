{
  "name": "@codai/bancai",
  "version": "0.1.0",
  "description": "AI-Powered Financial Platform for Modern Banking",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev -p 3003",
    "build": "next build",
    "start": "next start -p 3003",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "test": "npx vitest run --reporter=verbose",
    "test:ui": "npx vitest ui",
    "test:watch": "npx vitest watch --reporter=verbose",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "type-check": "tsc --noEmit",
    "docker:build": "docker build -t bancai:latest .",
    "docker:run": "docker run -p 3003:3003 bancai:latest",
    "docker:compose": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "health": "curl -f http://localhost:3003/api/health || exit 1",
    "clean": "rm -rf .next && rm -rf node_modules/.cache",
    "test:run": "vitest run"
  },
  "dependencies": {
    "next": "^14.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "typescript": "^5.0.0",
    "tailwindcss": "^3.4.0",
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.0"
  },
  "devDependencies": {
    "eslint": "^8.0.0",
    "eslint-config-next": "^14.0.0",
    "vitest": "^2.1.8",
    "@vitejs/plugin-react": "^4.0.0",
    "@playwright/test": "^1.40.0",
    "@vitest/ui": "^2.1.8",
    "@vitest/coverage-v8": "^1.2.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/jest-dom": "^6.1.0",
    "jsdom": "^23.0.0",
    "happy-dom": "^12.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}